{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url" : "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.2.10",
        "ext-xmlreader": "*",
        "ext-libxml": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "doctrine/dbal": "^2.6",
        "elasticquent/elasticquent": "dev-master",
        "fideloper/proxy": "~4.0",
        "johnpbloch/wordpress": "5.0.2",
        "laravel/framework": "5.7.*",
        "laravel/passport": "^7.0",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.7",
        "wpackagist-plugin/jwt-authentication-for-wp-rest-api": "1.2.5",
        "wpackagist-plugin/user-role-editor": "4.47"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0",
        "wp-phpunit/wp-phpunit": "5.0.2"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        },
        "wordpress-install-dir": "wordpress/wp",
        "installer-paths"      : {
            "public/wp-content/plugins/{$name}"   : ["type:wordpress-plugin"]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover",
            "php -r \"copy('wordpress/.htaccess', 'wordpress/wp/.htaccess');\"",
            "php -r \"copy('wordpress/wp-cli.phar', 'wordpress/wp/wp-cli.phar');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
