root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,sh}]
indent_size = 2

[*.{blade.php,html,js,css,scss}]
indent_size = 2
ij_javascript_align_multiline_chained_methods = true
ij_continuation_indent_size = 4
